<h1 class="text-center">レビュー一覧</h1>
 
       
<div class="container">
   <div class="row align-items-center">
  <ul>
    <table class="table table-striped table-bordered">
      <tr>
        <th class="text-center">id</th>
        <th class="text-center">タイトル</th>
        <th class="text-center">レビュー</th>
        <th class="text-center">お気に入り</th>
     </tr>

  <% @reviews.each do |review| %>
    <tr>
       <th class="text-center"><%= link_to review.id, review %></th> 
       <th class="text-center"><%= review.title %></th>
       <th><%= review.text %></th>
       <th class="text-center"><%= render 'favorites/favorite_button', review: review %></th>
   </tr>
  <% end %>
   </table>
</div>  
</div>   
   

</ul>
<div class="mx-auto" style="width: 200px;">
<%= link_to '新規レビュー投稿', new_review_path, class: 'align-items-center, btn btn-secondary btn-sm mr-6' %>
 </div>